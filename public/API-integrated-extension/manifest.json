{
    "manifest_version": 2,
  
    "name": "VisAngel",
    "description": "Make a donation",
    "version": "1.0",
    "content_security_policy": "script-src 'self' https://ajax.googleapis.com https://sandbox.secure.checkout.visa.com https://sandbox-assets.secure.checkout.visa.com; object-src 'self'",
  
    "permissions": [
     "activeTab"
     ],
     "content_scripts": [
   {
     "matches": ["<all_urls>"],
     "js": ["contentScript.js"]
   }
 ],
  "background" : {
                  "scripts" : ["background.js"]
    },
        "browser_action": {
     "default_icon": "christmas-angel.png",
     "default_popup": "popup.html"
    }

  }