{
    "manifest_version": 2,
  
    "name": "VisAngel",
    "description": "Make a donation",
    "version": "1.0",
  
    "permissions": [
     "activeTab",
     "downloads"
     ],
     "content_scripts": [
   {
     "matches": ["<all_urls>"],
     //"css": ["myStyles.css"],
     "js": ["contentScript.js"]
   }
 ],
  "background" : {
                  "scripts" : ["background.js"]
    },
        "browser_action": {
     "default_icon": "christmas-angel.png",
     "default_popup": "popup.html"
    }

  }